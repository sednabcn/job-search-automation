# ============================================
# LINKEDIN CREDENTIALS
# ============================================
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your_secure_password_here

# Optional: LinkedIn session cookie (for advanced automation)
LINKEDIN_SESSION_COOKIE=

# Rate limiting (requests per hour)
LINKEDIN_MAX_REQUESTS_PER_HOUR=50
LINKEDIN_DELAY_BETWEEN_REQUESTS=15  # seconds

# ============================================
# GLASSDOOR CREDENTIALS
# ============================================
GLASSDOOR_EMAIL=your.email@example.com
GLASSDOOR_PASSWORD=your_secure_password_here

# Optional: Glassdoor API key (if available)
GLASSDOOR_API_KEY=

# ============================================
# EMAIL CONFIGURATION (for sending applications)
# ============================================
# Gmail Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your.email@gmail.com
SENDER_PASSWORD=your_16_char_app_password_here
SENDER_NAME=Your Full Name

# Alternative SMTP providers:
# Outlook: smtp-mail.outlook.com, Port 587
# Yahoo: smtp.mail.yahoo.com, Port 587
# Custom: your.smtp.server.com, Port 587

# Email settings
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_TIMEOUT=30

# ============================================
# JOB SEARCH PREFERENCES
# ============================================
# Primary search location
LOCATION=London, UK

# Additional locations (comma-separated)
ADDITIONAL_LOCATIONS=Remote,Manchester, UK,Edinburgh, UK

# Job titles to search for (comma-separated)
JOB_TITLES=Data Scientist,Machine Learning Engineer,AI Engineer,Python Developer

# Alternative job titles (for broader search)
ALT_JOB_TITLES=ML Specialist,Data Engineer,Analytics Engineer

# Experience level (Entry level, Mid-Senior level, Director, Executive)
EXPERIENCE_LEVEL=Mid-Senior level

# Job types (Full-time, Part-time, Contract, Temporary, Internship)
JOB_TYPES=Full-time,Contract

# Remote work preference (Remote, On-site, Hybrid)
REMOTE_PREFERENCE=Remote,Hybrid

# ============================================
# SALARY & COMPENSATION
# ============================================
MIN_SALARY=80000
MAX_SALARY=200000
CURRENCY=GBP

# Include equity/bonuses in compensation
INCLUDE_EQUITY=true

# ============================================
# COMPANY PREFERENCES
# ============================================
# Preferred industries (comma-separated)
PREFERRED_INDUSTRIES=Technology,Software,Artificial Intelligence,Finance,Healthcare

# Company size preference (1-10,11-50,51-200,201-500,501-1000,1000+,10000+)
COMPANY_SIZE_PREFERENCE=51-200,201-500,501-1000

# Minimum company rating (Glassdoor, 1-5)
MIN_COMPANY_RATING=3.5

# Target companies (comma-separated)
TARGET_COMPANIES=Google,Amazon,Meta,Microsoft,Apple,OpenAI,DeepMind

# Companies to exclude (comma-separated)
EXCLUDED_COMPANIES=

# ============================================
# SKILLS & KEYWORDS
# ============================================
# Required skills (must have)
REQUIRED_SKILLS=Python,Machine Learning,SQL,Git

# Preferred skills (nice to have)
PREFERRED_SKILLS=TensorFlow,PyTorch,AWS,Docker,Kubernetes,NLP,Computer Vision

# Keywords to search for
SEARCH_KEYWORDS=machine learning,artificial intelligence,deep learning,data science

# Keywords to exclude
EXCLUDE_KEYWORDS=senior management,C-level,blockchain,crypto

# ============================================
# JOB MATCHING CONFIGURATION
# ============================================
# Minimum match score to consider (0-100)
MIN_MATCH_SCORE=70

# Matching weights (must sum to 1.0)
WEIGHT_SKILLS=0.35
WEIGHT_EXPERIENCE=0.25
WEIGHT_LOCATION=0.15
WEIGHT_SALARY=0.10
WEIGHT_CULTURE=0.10
WEIGHT_GROWTH=0.05

# Auto-apply for matches above this score
AUTO_APPLY_THRESHOLD=90

# ============================================
# RESUME & COVER LETTER
# ============================================
# Path to your resume file
RESUME_PATH=./documents/resume.pdf

# Alternative resume formats
RESUME_DOCX_PATH=./documents/resume.docx
RESUME_TXT_PATH=./documents/resume.txt

# Cover letter template path
COVER_LETTER_TEMPLATE=./templates/cover_letter_template.docx

# Your full name
FULL_NAME=Your Full Name

# Your phone number
PHONE_NUMBER=+44 7700 900000

# Your LinkedIn profile URL
LINKEDIN_URL=https://www.linkedin.com/in/your-profile

# Your portfolio/website
PORTFOLIO_URL=https://yourportfolio.com

# GitHub profile
GITHUB_URL=https://github.com/yourusername

# Years of experience
YEARS_OF_EXPERIENCE=5

# Current job title
CURRENT_JOB_TITLE=Senior Data Scientist

# ============================================
# AUTOMATION SETTINGS
# ============================================
# Enable/disable features
ENABLE_LINKEDIN_AUTO=true
ENABLE_GLASSDOOR_AUTO=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_AUTO_APPLY=false  # Set to false for safety
ENABLE_REFERRAL_REQUESTS=true

# Search frequency (in hours)
SEARCH_FREQUENCY_HOURS=6

# Maximum applications per day
MAX_APPLICATIONS_PER_DAY=20

# Days to search (how far back to look for job postings)
SEARCH_POSTED_WITHIN_DAYS=7

# Follow-up after (days)
FOLLOW_UP_AFTER_DAYS=7

# ============================================
# NOTIFICATIONS
# ============================================
# Enable email notifications for matches
ENABLE_EMAIL_NOTIFICATIONS=true

# Email address for notifications (can be different from sender)
NOTIFICATION_EMAIL=your.email@example.com

# Notify only for high-priority matches
NOTIFY_HIGH_PRIORITY_ONLY=false

# Notification threshold (minimum match score)
NOTIFICATION_THRESHOLD=85

# ============================================
# GITHUB INTEGRATION
# ============================================
# GitHub Personal Access Token (for creating issues/notifications)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Repository for storing data
GITHUB_REPO=yourusername/jobsearch

# Create GitHub issues for high-priority jobs
CREATE_GITHUB_ISSUES=true

# ============================================
# BROWSER AUTOMATION (Selenium/Playwright)
# ============================================
# Browser choice (chrome, firefox, edge, safari)
BROWSER=chrome

# Run in headless mode
HEADLESS=true

# Browser executable path (leave empty for auto-detect)
BROWSER_PATH=

# Download directory for job descriptions
DOWNLOAD_DIR=./downloads

# Screenshots directory
SCREENSHOT_DIR=./screenshots

# Page load timeout (seconds)
PAGE_TIMEOUT=30

# ============================================
# PROXY SETTINGS (Optional)
# ============================================
# Use proxy for requests
USE_PROXY=false

# Proxy configuration
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_TYPE=http  # http, https, socks5

# ============================================
# API KEYS (Optional)
# ============================================
# OpenAI API Key (for AI-powered features)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude API Key (alternative to OpenAI)
ANTHROPIC_API_KEY=

# Resume parsing API
RESUME_PARSER_API_KEY=

# ============================================
# DATABASE (Optional)
# ============================================
# Database type (sqlite, postgresql, mysql)
DATABASE_TYPE=sqlite

# SQLite database path
SQLITE_DB_PATH=./job_search.db

# PostgreSQL settings (if using)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jobsearch
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# ============================================
# LOGGING & DEBUGGING
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/job_search.log

# Enable verbose logging
VERBOSE=false

# Save failed requests for debugging
SAVE_FAILED_REQUESTS=true

# ============================================
# ADVANCED SETTINGS
# ============================================
# User agent string (leave empty for random)
USER_AGENT=

# Maximum retries for failed requests
MAX_RETRIES=3

# Retry delay (seconds)
RETRY_DELAY=5

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Cache search results (hours)
CACHE_DURATION_HOURS=24

# Clean old data after (days)
CLEAN_OLD_DATA_AFTER_DAYS=90

# ============================================
# ANTI-DETECTION MEASURES
# ============================================
# Random delays between actions
RANDOM_DELAY_MIN=3
RANDOM_DELAY_MAX=10

# Mimic human behavior
MIMIC_HUMAN_BEHAVIOR=true

# Mouse movement simulation
SIMULATE_MOUSE_MOVEMENT=true

# Random scrolling
RANDOM_SCROLLING=true

# ============================================
# REFERRAL AUTOMATION
# ============================================
# Maximum referral requests per week
MAX_REFERRALS_PER_WEEK=10

# Referral request template
REFERRAL_TEMPLATE_PATH=./templates/referral_request.txt

# Connection degree for referrals (1st, 2nd, 3rd)
REFERRAL_CONNECTION_DEGREE=2nd

# ============================================
# TESTING & DEVELOPMENT
# ============================================
# Test mode (doesn't send real applications)
TEST_MODE=false

# Dry run (simulates actions without executing)
DRY_RUN=false

# Mock data for testing
USE_MOCK_DATA=false

# Development environment
ENVIRONMENT=production  # production, staging, development